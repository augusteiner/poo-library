<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd" version="2.0">
  <entity class="poo.library.modelo.Usuario" access="FIELD">

    <table name="usuario" />

    <inheritance strategy="SINGLE_TABLE" />

    <discriminator-value>COMUM</discriminator-value>
    <discriminator-column name="tipo" discriminator-type="STRING" />

    <attributes>
      <id name="id" access="FIELD">
        <column name="id" />
        <generated-value strategy="IDENTITY" />
      </id>

      <basic name="nome" />
      <basic name="login" />
      <basic name="senha" />

      <basic name="cpf" />
      <basic name="endereco" />

      <one-to-many name="reservas" access="FIELD" fetch="LAZY" mapped-by="usuario">
      </one-to-many>

      <one-to-many name="locacoes" access="FIELD" fetch="LAZY" mapped-by="usuario">
      </one-to-many>

      <transient name="tipo" />

      <!-- <transient name="reservas" /> -->
      <!-- <transient name="locacoes" /> -->
    </attributes>
  </entity>
</entity-mappings>
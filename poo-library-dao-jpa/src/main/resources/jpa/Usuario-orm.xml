<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
  version="2.0">
  <entity class="poo.library.modelo.Usuario">

    <table name="usuario" />

    <inheritance strategy="SINGLE_TABLE" />

    <discriminator-value>COMUM</discriminator-value>
    <discriminator-column name="tipo" discriminator-type="STRING" />

    <attributes>
      <id name="id">
        <column name="id" />
        <generated-value strategy="IDENTITY" />
      </id>

      <transient name="tipo" />

      <transient name="alugueis"></transient>
      <transient name="reservas"></transient>
    </attributes>
  </entity>
</entity-mappings>
<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
  version="2.0">
  <entity class="poo.library.modelo.ItemAcervo" access="FIELD">

    <table name="item_acervo" />

    <inheritance strategy="SINGLE_TABLE" />

    <discriminator-column name="categoria" discriminator-type="STRING" />

    <attributes>
      <id name="id">
        <column name="id" />
        <generated-value strategy="IDENTITY" />
      </id>

      <basic name="autor" />
      <basic name="precoAluguel" />
      <basic name="qteDisponivel" />
      <basic name="qteTotal" />

      <basic name="bibliotecaId" />

      <transient name="categoria" />
      <transient name="biblioteca" />
    </attributes>
  </entity>
</entity-mappings>
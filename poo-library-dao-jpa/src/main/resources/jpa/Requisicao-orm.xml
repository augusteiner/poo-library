<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_2_0.xsd"
  version="2.0">
  <mapped-superclass class="poo.library.modelo.Requisicao">

    <attributes>

      <id name="id">
        <column name="id" />
        <generated-value strategy="IDENTITY" />
      </id>

      <basic name="usuarioId" optional="false" />
      <basic name="itemAcervoId" optional="false" />

      <basic name="realizadaEm" />

      <one-to-one name="usuario" target-entity="poo.library.modelo.Usuario"
        fetch="LAZY" optional="false" id="false">
        <join-column name="usuarioId" insertable="false" updatable="false"
          unique="false" nullable="false" />
      </one-to-one>

      <one-to-one name="itemAcervo" target-entity="poo.library.modelo.ItemAcervo"
        fetch="LAZY" optional="false" id="false">
        <join-column name="itemAcervoId" insertable="false" updatable="false"
          unique="false" nullable="false" />
      </one-to-one>
    </attributes>

  </mapped-superclass>
</entity-mappings>